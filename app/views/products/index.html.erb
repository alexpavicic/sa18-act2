<h1>To-Do Items</h1>
 
<table class="table table-hover">
 
  <thead class="table-dark">
    <tr>
      <th>Name</th>
    </tr>
  </thead>
 
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>